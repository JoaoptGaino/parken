generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ParkingSpot {
  id             String @id @default(uuid())
  identification String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  Receipt Receipt?
  @@map("parking_spots")
}

model Vehicle {
  id    String @id @default(uuid())
  plate String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  Receipt Receipt?

  @@map("vehicles")
}

model Receipt {
  id String @id @default(uuid())

  vehicleId String @unique @map("vehicle_id")

  parkingSpotId String @unique @map("parking_spot_id")

  totalValue Decimal? @map("total_value")

  checkIn  DateTime @default(now()) @map("check_in")
  checkOut DateTime


  ParkingSpot ParkingSpot @relation(fields: [parkingSpotId], references: [id])
  Vehicle     Vehicle     @relation(fields: [vehicleId], references: [id])

  @@map("receipt")
}
